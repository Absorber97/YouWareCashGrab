  "moodSystem": {
    "philosophy": {
      "concept": "Emotional Productivity Intelligence",
      "tagline": "Label it to understand it, track it to change it",
      "pillars": [
        {
          "name": "Anticipate",
          "when": "Before task",
          "question": "How do I feel about this?",
          "purpose": "Emotional forecasting, energy management"
        },
        {
          "name": "Experience",
          "when": "During task",
          "method": "Visual feedback (skyscape, colors)",
          "purpose": "Ambient awareness of emotional load"
        },
        {
          "name": "Reflect",
          "when": "After task",
          "question": "How did that feel?",
          "purpose": "Capture outcome, compare to anticipation"
        }
      ],
      "insightLoop": "Anticipate ‚Üí Experience ‚Üí Reflect ‚Üí Learn ‚Üí Anticipate (better)"
    },
    
    "psychologyBasis": {
      "emotionalGranularity": {
        "source": "Lisa Feldman Barrett research",
        "finding": "Higher granularity = better emotional regulation",
        "application": "Offer nuanced options, not just good/bad"
      },
      "affectLabeling": {
        "source": "Matthew Lieberman 'Name it to tame it'",
        "finding": "Labeling emotions reduces amygdala activity",
        "application": "Even 1-tap mood selection provides benefit"
      },
      "plutchiksWheel": {
        "source": "Robert Plutchik emotion theory",
        "finding": "8 primary emotions combine to create complex feelings",
        "application": "Expandable wheel for power users"
      }
    },

